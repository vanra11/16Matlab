m=0.5;
Am=5;
fm=100;
fc=1000;
fs=10*fc;
t=0:1/fs:6*1/fm;

ym=Am*sin(2*pi*fm*t); %message signal
subplot(4, 1, 1);
plot(t, ym);
title('Message Signal')

Ac=Am/m;
yc=Ac*cos(2*pi*fc*t); %carrier signal
subplot(4, 1, 2);
plot(t, yc);
title('Carrier Signal')

ynm=Ac*(1+m*sin(2*pi*fm*t))+sin(2*pi*fc*t); %modulated signal
subplot(4, 1, 3);
plot(t, ynm);
title('ModulatedÂ Signal')
